<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no, viewport-fit=cover">
    <meta name="theme-color" content="#0097DB">
    <title>Barion vehiclestore</title>
    <link rel="shortcut icon" href="/img/favicon.png">
    <!--<link rel="stylesheet" href="/dist/css/framework7.ios.css">-->
    <link rel="stylesheet" href="./../stylesheets/icons.css">
    <link rel="stylesheet" href="./../javascripts/framework7/dist/css/framework7.ios.min.css">
    <!--<link rel="stylesheet" href="./../javascripts/framework7/dist/css/framework7.min.css">-->
    <link rel="stylesheet" href="./../stylesheets/my.css">
    <link rel="stylesheet" href="./../stylesheets/framework7.barion.css">
</head>
<body>
    <div id="app">
        <div class="statusbar"></div>
        <div class="view view-main">

            <!-- PAGE 1 - List -->
            <div class="page" data-name="main">
                <div class="navbar">
                    <div class="navbar-inner sliding">
                        <div class="left">
                            <a id="exitButton" href="#" class="link">
                                <i class="icon icon-back"></i>
                                <span>Market</span>
                            </a>
                        </div>
                        <div class="title">E vignette</div>
                    </div>
                </div>

                <div class="page-content">
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript files -->
    <script type="text/javascript" src="./../javascripts/BarionMarket.js"></script>
    <!--<script type="text/javascript" src="./../javascripts/BarionMarket.min.js"></script>-->
    <script type="text/javascript" src="./../javascripts/framework7/dist/js/framework7.min.js"></script>
    <script type="text/javascript" src="./../javascripts/ematrica-app.js"></script>

    <script id="selectVehicleTemplate" type="text/template7">
        <li id="selectVehicleSection">
            <div id="changeVehicleButton" class="item-link item-content store-list-element">
                <div class="item-media"><span class="vehicle-icon"><img src="{{image}}" class="icon"></img></span></div>
                <div class="item-inner">
                    <div class="item-title">
                        <div class="item-header">Vehicle</div>
                        {{licensePlate}}
                    </div>
                    <div class="item-after"></div>
                </div>
            </div>
        </li>
    </script>

    <script id="selectVignetteTemplate" type="text/template7">
        <li id="selectVignetteSection">
            <div id="showVignetteTypes" class="item-link item-content store-list-element">
                <div class="item-media"><span class="type-icon">{{selectedVignetteName}}</span></div>
                <div class="item-inner">
                    <div class="item-title">
                        <div class="item-header">Vignette type</div>
                        {{selectedVignette}}
                    </div>
                    <div class="item-after"></div>
                </div>
            </div>
        </li>
    </script>

    <script id="selectValidityTemplate" type="text/template7">
        <li id="selectValiditySection">
            <div id="changeValidityButton" class="item-link item-content store-list-element" >
                <div class="item-media"><span class="validity-icon">{{selectedVignetteValidity}}<br/>DAYS</span></div>
                <div class="item-inner">
                    <div class="item-title">
                        <div class="item-title">
                            <div class="item-header">Date of validity</div>
                            <span class="validity-range">{{getValidityRange}}</span>
                        </div>
                    </div>
                    <div class="item-after edit-validity"></div>
                </div>
            </div>
        </li>
    </script>

    <script id="vignettePriceTemplate" type="text/template7">
        <li>
            <div class="item-content store-list-element" >
                <div class="item-media"><span class="type-icon">$</div>
                <div class="item-inner">
                    <div class="item-title">
                        <div class="item-title">
                            <div class="item-header">Price</div>
                            <span class="item-price">{{selectedVignettePrice}}</span>
                        </div>
                    </div>
                </div>
            </div>
        </li>
    </script>

    <script id="contentTemplate" type="text/template7">
        <div class="list">
            <ul>
                {{> "selectVehicle"}}
                {{> "selectVignette"}}
                {{> "selectValidity"}}
            </ul>
        </div>
        <div class="list" id="priceContainer">
            <ul>
                {{> "vignettePrice"}}
            </ul>
        </div>
        <div class="block">
            <input type="submit" class="button button-fill" id="payWithBarionButton" value="Buy with Barion">
        </div>
    </script>

    <script id="vignetteTypesTemplate" type="text/template7">
        <div class="list">
            <div class="list-group">
                <ul>
                <li class="list-group-title">Highway vignette</li>
                {{#each highways}}
                <li id="selectVignetteType" data-vignette-id={{productId}}>
                    <div class="item-content">
                    <div class="item-inner">
                        <div class="item-title">{{productDescription}}</div>
                    </div>
                    </div>
                </li>
                {{/each}}
                </ul>
            </div>
            <div class="list-group">
                <ul>
                <li class="list-group-title">Yearly county</li>
                {{#each yearlyCounty}}
                <li id="selectVignetteType" data-vignette-id={{productId}}>
                    <div class="item-content">
                    <div class="item-inner">
                        <div class="item-title">{{productCounty}}</div>
                    </div>
                    </div>
                </li>
                {{/each}}
                </ul>
            </div>
        </div>
    </script>

    <script id="loadingTemplate" type="text/template7">
        <div class="block loading-container">
            <div align="center">
                <img src="/img/loading.gif" alt="LOADING" width="64" height="64" /><br>
                <span>LOADING...</span>
            </div>
        </div>
    </script>

</body>
</html>
